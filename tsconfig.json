{
  "compilerOptions": {
    "esModuleInterop": true,
    "target": "es5",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",
    "lib": [
      "es7",
      "dom"
    ]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
